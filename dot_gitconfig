[user]
    name = Jan Pokorn√Ω
    email = jenompokorny@gmail.com

[core]
    excludesfile = ~/.gitignore

[init]
    defaultBranch = main

[filter "lfs"]
    smudge = git-lfs smudge -- %f
    process = git-lfs filter-process
    required = true
    clean = git-lfs clean -- %f

[alias]
    uncommit = reset --soft HEAD~1
    main-branch = "!test -f .git/refs/remotes/origin/HEAD && sed -e 's/^.*\\///' < .git/refs/remotes/origin/HEAD || basename .git/refs/remotes/origin/ma*"

[includeIf "gitdir:~/ghq/github.com/***REMOVED***/"]
    path = .gitconfig-***REMOVED***

[includeIf "gitdir:~/ghq/github.***REMOVED***.com/"]
    path = .gitconfig-***REMOVED***
